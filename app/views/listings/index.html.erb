<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url %><br>
          <div class="caption">
            <div class="text-center">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %><p><br>
            </div>
            <%= link_to 'Show', listing %> |
            <%= link_to 'Edit', edit_listing_path(listing) %> |
            <%= link_to 'Destroy', listing, method: :delete, 
              data: { confirm: 'Are you sure?' } %>
          </div>
      </div>
    </div>
  <% end %>
</div><!--row ends-->
<br>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %>
