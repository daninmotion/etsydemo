<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <div class="text-center">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %><p><br>
              <p><%= "Sold by #{listing.user.name}" %></p>
              <p> 
                <% if (user_signed_in?) && (current_user == listing.user) %>
                  <%= link_to 'Edit', edit_listing_path(listing) %> 
                  <%= link_to 'Destroy', listing, method: 
                  :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </p>
            </div>
          </div>
      </div>
    </div>
  <% end %>
</div><!--row ends-->
<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %>
<% end %>
